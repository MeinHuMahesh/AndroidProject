<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/purple_500">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageview_profile_dp"
                android:layout_centerInParent="true"
                android:background="@drawable/no_profile_pic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_welcome_text"
                android:hint="Loading..."
                android:layout_below="@id/imageview_profile_dp"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RL_name"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/userActivity_ic_profile"
                android:background="@drawable/ic_profile"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_fullname"
                android:layout_alignStart="@+id/userActivity_ic_profile"
                android:hint="Loading..."
                android:layout_marginStart="50dp"
                android:textSize="18sp"/>
        </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/RL_name"
                android:id="@+id/divider_name"
                android:background="@android:color/darker_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RL_email"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/userActivity_ic_email"
                android:background="@drawable/ic_email"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_email"
                android:layout_alignStart="@+id/userActivity_ic_email"
                android:hint="Loading..."
                android:layout_marginStart="50dp"
                android:textSize="18sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/RL_email"
            android:id="@+id/divider_email"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/RL_phone_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:padding="15dp">

            <ImageView
                android:id="@+id/userActivity_ic_phone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_mobile" />

            <TextView
                android:id="@+id/textview_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/userActivity_ic_phone"
                android:layout_marginStart="50dp"
                android:hint="Loading..."
                android:textSize="18sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/RL_phone_number"
            android:id="@+id/divider_phone"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RL_gender"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/userActivity_ic_gender"
                android:background="@drawable/ic_gender"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_gender"
                android:layout_alignStart="@+id/userActivity_ic_gender"
                android:hint="Loading..."
                android:layout_marginStart="50dp"
                android:textSize="18sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/RL_gender"
            android:id="@+id/divider_gender"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RL_roll"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/userActivity_ic_roll"
                android:background="@drawable/ic_student"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_roll"
                android:layout_alignStart="@+id/userActivity_ic_roll"
                android:hint="Loading..."
                android:layout_marginStart="50dp"
                android:textSize="18sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/RL_roll"
            android:id="@+id/divider_roll"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RL_year"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/userActivity_ic_year"
                android:background="@drawable/ic_student"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_year"
                android:layout_alignStart="@+id/userActivity_ic_year"
                android:hint="Loading..."
                android:layout_marginStart="50dp"
                android:textSize="18sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/RL_year"
            android:id="@+id/divider_year"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RL_stream"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/userActivity_ic_stream"
                android:background="@drawable/ic_student"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_stream"
                android:layout_alignStart="@+id/userActivity_ic_stream"
                android:hint="Loading..."
                android:layout_marginStart="50dp"
                android:textSize="18sp"/>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            android:visibility="gone" />


    </LinearLayout>


</ScrollView>